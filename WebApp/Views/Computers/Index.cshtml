@model List<Computer>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Lista komputerów</h1>
        <a class="btn btn-primary" asp-controller="Computers" asp-action="Create">Utwórz komputer</a>
    </div>

    @if (!Model.Any())
    {
    <div class="alert alert-info">
        Brak komputerów do wyświetlenia. <a asp-controller="Computers" asp-action="Create">Dodaj nowy komputer</a>.
    </div>
    }
    else
    {
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Nazwa</th>
            <th>Procesor</th>
            <th>Pamięć</th>
            <th>Karta graficzna</th>
            <th>Producent</th>
            <th>Data produkcji</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        @foreach(var computer in Model)
        {
        <tr>
            <td>@computer.Name</td>
            <td>@computer.Processor</td>
            <td>@computer.Memory</td>
            <td>@computer.GraphicsCard</td>
            <td>@computer.Manufacturer</td>
            <td>@computer.ProductionDate.ToString("d")</td>
            
            <td>
                <a class="btn btn-primary"
                   asp-action="Edit"
                   asp-controller="Computers"
                   asp-route-id=@computer.Id>Edytuj</a>
                <a class="btn btn-primary"
                   asp-action="Details"
                   asp-controller="Computers"
                   asp-route-id=@computer.Id>Szczegóły</a>
                <a class="btn btn-primary"
                   asp-action="Delete"
                   asp-controller="Computers"
                   asp-route-id=@computer.Id>Usuń</a>
            </td>
        </tr>
        }
        </tbody>
    </table>
    }
</div>