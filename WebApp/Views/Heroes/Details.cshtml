@model SuperheroDetailsViewModel

@{
ViewData["Title"] = "Details";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4">@Model.Superhero.SuperheroName</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <h4 class="text-primary">Details</h4>
        <dl class="row">
            <dt class="col-sm-4">Superhero name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Superhero.SuperheroName)</dd>

            <dt class="col-sm-4">Full name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Superhero.FullName)</dd>

            <dt class="col-sm-4">Height (cm)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Superhero.HeightCm)</dd>

            <dt class="col-sm-4">Weight (kg)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Superhero.WeightKg)</dd>

            <dt class="col-sm-4">Alignent</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Superhero.Alignment.Alignment1)</dd>

            <dt class="col-sm-4">Eye colour</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Superhero.EyeColour.Colour1)</dd>

            <dt class="col-sm-4">Gender</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Superhero.Gender.Gender1)</dd>

            <dt class="col-sm-4">Hair colour</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Superhero.HairColour.Colour1)</dd>

            <dt class="col-sm-4">Publisher</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Superhero.Publisher.PublisherName)</dd>

            <dt class="col-sm-4">Race</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Superhero.Race.Race1)</dd>

            <dt class="col-sm-4">Skin colour</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Superhero.SkinColour.Colour1)</dd>
        </dl>
    </div>

    <div class="col-md-6">
        <h4 class="text-primary">Super powers</h4>
        <ul class="list-group">
            @foreach (var power in Model.Powers)
            {
            <li class="list-group-item">@power</li>
            }
        </ul>
    </div>
</div>
<div class="mt-3">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Superhero.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>