@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApp.Models.PagingListAsync<Data.Models.Movies.Movie>

@{
ViewData["Title"] = "Movies";
Layout = "~/Views/Shared/_Layout.cshtml";
CancellationToken token = CancellationToken.None;
}

<h1>Movies</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Release Date</th>
        <th>Budget</th>
        <th>Revenue</th>
        <th>Popularity</th>
        <th>Vote Average</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @await foreach (var item in Model.Data) {
    <tr>
        <td>@item.MovieId</td>
        <td>@item.Title</td>
        <td>@item.ReleaseDate?.ToString("yyyy-MM-dd")</td>
        <td class="text-end">@item.Budget?.ToString("N0") $</td>
        <td class="text-end">@item.Revenue?.ToString("N0") $</td>
        <td>@item.Popularity?.ToString("F2")</td>
        <td>@item.VoteAverage?.ToString("F1") (@item.VoteCount)</td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.MovieId" class="btn btn-sm btn-primary">Edit</a>
            <a asp-action="Details" asp-route-id="@item.MovieId" class="btn btn-sm btn-info">Details</a>
            <a asp-action="Delete" asp-route-id="@item.MovieId" class="btn btn-sm btn-danger">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>

<nav aria-label="Books page navigation">
    <ul class="pagination">
        @if (Model.IsPrevious)
        {
        <li class="page-item">
            <a class="page-link"
               asp-controller="Movie"
               asp-action="Index"
               asp-route-page="@(Model.Page - 1)"
               asp-route-size="@Model.Size">
                Previous
            </a>
        </li>
        }
        else
        {
        <li class="page-item disabled">
            <a class="page-link">Previous</a>
        </li>
        }
        <li class="page-item disabled">
            <a class="page-link" >@Model.Page</a>
        </li>
        @if (Model.IsNext)
        {
        <li class="page-item">
            <a class="page-link"
               asp-controller="Movie"
               asp-action="Index"
               asp-route-page="@(Model.Page + 1)"
               asp-route-size="@Model.Size">
                Next
            </a>
        </li>
        }
        else
        {
        <li class="page-item disabled">
            <a class="page-link">Next</a>
        </li>
        }
    </ul>
</nav>
